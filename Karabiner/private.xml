<?xml version="1.0"?>
<root>
  <item>

    <name>Yichi's Favourite</name>

    <item>
      <name>Common to all</name>
      <name>-------------</name>
      <identifier>remap.yz_common_to_all</identifier>

      <modifierdef>PC_APPLICATION_MOD</modifierdef>
      <name>App key to Command R</name>
      <autogen>__KeyToKey__ KeyCode::PC_APPLICATION, KeyCode::COMMAND_R</autogen>

      <name>Ps/SR, ScLk and Pa/Br to CMD+XCV</name>
      <autogen>__KeyToKey__ KeyCode::PC_PRINTSCREEN, ModifierFlag::NONE, KeyCode::X, ModifierFlag::COMMAND_L</autogen>
      <autogen>__KeyToKey__ KeyCode::PC_SCROLLLOCK, ModifierFlag::NONE, KeyCode::V, ModifierFlag::COMMAND_L</autogen>
      <autogen>__KeyToKey__ KeyCode::PC_PAUSE, ModifierFlag::NONE, KeyCode::B, ModifierFlag::COMMAND_L</autogen>

      <name>Shifts to Parentheses</name>
      <!-- This is the basic mapping. -->
      <autogen>__KeyOverlaidModifier__ KeyCode::SHIFT_R, ModifierFlag::SHIFT_R | ModifierFlag::NONE,
        KeyCode::SHIFT_R, KeyCode::KEY_0, ModifierFlag::SHIFT_L
      </autogen>
      <autogen>__KeyOverlaidModifier__ KeyCode::SHIFT_L, ModifierFlag::SHIFT_L | ModifierFlag::NONE,
        KeyCode::SHIFT_L, KeyCode::KEY_9, ModifierFlag::SHIFT_R
      </autogen>
      <autogen>__KeyOverlaidModifier__ KeyCode::SHIFT_R, ModifierFlag::CAPSLOCK, KeyCode::SHIFT_R, KeyCode::KEY_0,
        ModifierFlag::SHIFT_L
      </autogen>
      <autogen>__KeyOverlaidModifier__ KeyCode::SHIFT_L, ModifierFlag::CAPSLOCK, KeyCode::SHIFT_L, KeyCode::KEY_9,
        ModifierFlag::SHIFT_R
      </autogen>
      <!-- Pushing Shifts together produces () -->
      <autogen>__KeyToKey__ KeyCode::SHIFT_L, ModifierFlag::SHIFT_R, KeyCode::KEY_0, ModifierFlag::SHIFT_L,
        KeyCode::KEY_9, ModifierFlag::SHIFT_L
      </autogen>
      <autogen>__KeyToKey__ KeyCode::SHIFT_R, ModifierFlag::SHIFT_L, KeyCode::KEY_9, ModifierFlag::SHIFT_L,
        KeyCode::KEY_0, ModifierFlag::SHIFT_L
      </autogen>

      <name>F5 to Tab</name>
      <autogen>__KeyToKey__ KeyCode::F5, ModifierFlag::NONE, KeyCode::TAB</autogen>

      <name>TEK - Section key to Command R</name>
      <autogen>__KeyToKey__ KeyCode::UK_SECTION, KeyCode::COMMAND_R</autogen>
    </item>

    <item>
      <name>Tab to Delete</name>
      <identifier>remap.yz_tab_to_delete</identifier>
      <autogen>__KeyToKey__ KeyCode::TAB, KeyCode::DELETE</autogen>
    </item>

    <item>
      <name>Tab to fn</name>
      <identifier>remap.yz_tab_to_fn</identifier>
      <autogen>__KeyToKey__ KeyCode::TAB, KeyCode::FN</autogen>
    </item>

    <item>
      <name>Symbols with fn</name>
      <identifier>remap.yz_symbols_with_fn</identifier>
      <autogen>__KeyToKey__ KeyCode::Q, ModifierFlag::FN, KeyCode::DELETE</autogen>
      <autogen>__KeyToKey__ KeyCode::W, ModifierFlag::FN, KeyCode::KEY_8, ModifierFlag::SHIFT_L</autogen>
      <autogen>__KeyToKey__ KeyCode::E, ModifierFlag::FN, KeyCode::EQUAL, ModifierFlag::NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::R, ModifierFlag::FN, KeyCode::RETURN, SimultaneousKeyPresses::Option::RAW</autogen>

      <autogen>__KeyToKey__ KeyCode::S, ModifierFlag::FN, KeyCode::BRACKET_LEFT, ModifierFlag::NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::D, ModifierFlag::FN, KeyCode::BRACKET_LEFT, ModifierFlag::SHIFT_L</autogen>

      <autogen>__KeyToKey__ KeyCode::Z, ModifierFlag::FN, KeyCode::KEY_7, ModifierFlag::SHIFT_L</autogen>
      <autogen>__KeyToKey__ KeyCode::X, ModifierFlag::FN, KeyCode::MINUS, ModifierFlag::NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::C, ModifierFlag::FN, KeyCode::MINUS, ModifierFlag::NONE, KeyCode::DOT, ModifierFlag::SHIFT_L</autogen>
      <autogen>__KeyToKey__ KeyCode::V, ModifierFlag::FN, KeyCode::MINUS, ModifierFlag::SHIFT_L</autogen>

      <autogen>__KeyToKey__ KeyCode::L, ModifierFlag::FN, KeyCode::BRACKET_RIGHT, ModifierFlag::NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::K, ModifierFlag::FN, KeyCode::BRACKET_RIGHT, ModifierFlag::SHIFT_L</autogen>
      <autogen>__KeyToKey__ KeyCode::J, ModifierFlag::FN, KeyCode::KEY_0, ModifierFlag::SHIFT_L</autogen>
    </item>

    <item>
