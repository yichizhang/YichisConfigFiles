[core]
  excludesfile = ~/.gitignore_global
  editor = /usr/local/bin/vim
[user]
  name = Yichi Zhang
  email = zhang-yi-chi@hotmail.com
[alias]
  a = add
  ap = add --patch
  aa = add -A

  acm = !git add . && git commit -m
  acv = !git add . && git commit -v

  bomb = reset --hard

  br = branch

  c = commit
  ca = commit --amend
  cm = commit -m
  cv = commit -v

  cl = clone

  co = checkout
  cob = checkout -b
  cod = checkout develop
  coh = checkout HEAD

  cpk = cherry-pick

  d = diff
  dc = diff --cached
  dh = "!sh -c 'git diff HEAD~$1..HEAD~$2' -"

  fe = fetch

  go = !git branch --no-color | sed -En 's/^  (.+)$/\\1/p' | pick | xargs -t git checkout
  grconf = "!f(){ grep -lr '<<<<<<<' .; };f "

  la = log -1 -U

  l = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
  ll = log --stat --abbrev-commit
  lg = log --color --graph --pretty=format:'%C(bold white)%h%Creset -%C(bold green)%d%Creset %s %C(bold green)(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  llg = log --color --graph --pretty=format:'%C(bold white)%H %d%Creset%n%s%n%+b%C(bold blue)%an <%ae>%Creset %C(bold green)%cr (%ci)' --abbrev-commit

  mg = merge
  mgd = merge develop

  pl = pull

  pu = push
  puf = push --force-with-lease
  pusuo = push --set-upstream origin

  rb = rebase
  rbcont = rebase --continue
  rbi = rebase -i
  rbid = rebase -i develop

  re = reset
  reh = "!sh -c 'git reset HEAD~$1' -"

  s = stash
  sha = log -1 --pretty=format:%H
  sli = stash list
  sp = stash --patch
  spop = stash pop

  san = "!sh -c 'git stash apply stash@{$1}' -"
  sdrn = "!sh -c 'git stash drop stash@{$1}' -"
  sshn= "!sh -c 'git stash show -p stash@{$1}' -"
  sski = stash save --keep-index

  st = status
  unstage = reset HEAD --
[color]
  ui = always
[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
